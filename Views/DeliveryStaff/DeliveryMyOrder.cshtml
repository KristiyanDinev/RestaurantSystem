@using RestaurantSystem.Enums
@using RestaurantSystem.Models.DatabaseModels
@using RestaurantSystem.Models
@using RestaurantSystem.Models.View.Messages;
@model RestaurantSystem.Models.View.Staff.Delivery.DeliveryMyOrderViewModel;
@{
    ViewData["Title"] = "My Delivery Orders - Savans Restaurant";
}

<head>
    @await Html.PartialAsync("_Header")
    <script src="~/assets/staff/delivery/delivery_myorders.js"></script>
</head>

<body>
    @await Html.PartialAsync("_StaffNavBar", Model.Staff)
    @await Html.PartialAsync("_RestaurantBar", Model.Staff.Restaurant)
    
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="text-center mb-4">
            <h2 class="fw-bold text-warning">
                <i class="bi bi-truck me-3"></i>
                My Active Deliveries
            </h2>
        </div>

        @await Html.PartialAsync("_SuccessMessage", new MessageViewModel
        {
            Key = "Success",
            Message = " Delivery Started Successfully!"
        })

        @await Html.PartialAsync("_SuccessMessage", new MessageViewModel
        {
            Key = "DeliveredSuccessfully",
            Message = "Delivered Order Successfully!"
        })

        <!-- Navigation Button -->
        <div class="d-flex justify-content-start align-items-center mb-4">
            <a href="/staff/delivery/orders" class="btn btn-outline-warning">
                <i class="bi bi-arrow-left me-2"></i>
                Back to All Orders
            </a>
        </div>

        <!-- Orders List -->
        @if (Model.Orders.Any())
        {
            <div class="row">
                @foreach (OrderWithDishesCountModel orderWithDishes in Model.Orders)
                {
                    OrderModel order = orderWithDishes.Order;
                    RestaurantModel restaurant = order.Restaurant;
                    
                    <div class="col-12 mb-4">
                        <div class="card shadow-sm border border-warning border-2">
                            <!-- Order Header with Delivering Status -->
                            <div class="card-header bg-dark border-warning py-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0 fw-bold text-light">
                                        <i class="bi bi-receipt me-2 text-warning"></i>
                                        Order #@order.Id
                                    </h5>
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-@(GetStatusBadgeColor(order.CurrentStatus)) fs-6 px-3 py-2 fw-bold me-3">
                                            <i class="bi bi-@(GetStatusIcon(order.CurrentStatus)) me-1"></i>
                                            @order.CurrentStatus
                                        </span>
                                        @if (order.CurrentStatus == OrderStatusEnum.Delivering)
                                        {
                                            <span class="badge bg-primary fs-6">
                                                <i class="bi bi-person-check me-1"></i>
                                                Your Responsibility
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="card-body">
                                <!-- Order Items -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-warning fw-bold pb-2 mb-3">
                                            <i class="bi bi-list-ul me-2"></i>
                                            Order Items
                                        </h6>
                                        <div class="row g-3">
                                            @foreach (DishWithStatusModel dish in orderWithDishes.DishesCount.Keys)
                                            {
                                                <div class="col-md-6 col-lg-4">
                                                    <div class="card border border-warning bg-warning bg-opacity-10">
                                                        <div class="card-body">
                                                            <!-- Dish Display -->
                                                            <div class="mb-3">
                                                                @await Html.PartialAsync("_DisplayDish", dish.Dish)
                                                            </div>
                                                            
                                                            <!-- Quantity and Status -->
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <span class="badge bg-secondary">
                                                                    Quantity: @orderWithDishes.DishesCount[dish]
                                                                </span>
                                                                <span class="badge bg-@(GetStatusBadgeColorDish(dish.OrderedDish.CurrentStatus)) text-dark">
                                                                    <i class="bi bi-@(GetStatusIconDish(dish.OrderedDish.CurrentStatus)) me-1"></i>
                                                                    @dish.OrderedDish.CurrentStatus
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-4">
                                    <!-- Restaurant Information -->
                                    <div class="col-lg-4 mb-3">
                                        <div class="card bg-warning bg-opacity-10 border-warning border-opacity-50 h-100">
                                            <div class="card-body">
                                                <h6 class="text-warning fw-bold mb-3">
                                                    <i class="bi bi-building me-2"></i>
                                                    Restaurant (Pickup)
                                                </h6>
                                                <address class="mb-0">
                                                    <div class="mb-2">
                                                        <i class="bi bi-geo-alt text-warning me-2"></i>
                                                        @restaurant.Address<br>
                                                        @restaurant.City, @restaurant.State<br>
                                                        @restaurant.Country @restaurant.PostalCode
                                                    </div>
                                                    @if (restaurant.PhoneNumber != null)
                                                    {
                                                        <div class="mb-2">
                                                            <i class="bi bi-telephone text-warning me-2"></i>
                                                            <a href="tel:@restaurant.PhoneNumber" class="text-decoration-none text-warning">
                                                                @restaurant.PhoneNumber
                                                            </a>
                                                        </div>
                                                    }
                                                    @if (restaurant.Email != null)
                                                    {
                                                        <div class="mb-2">
                                                            <i class="bi bi-envelope text-warning me-2"></i>
                                                            <a href="mailto:@restaurant.Email" class="text-decoration-none text-warning">
                                                                @restaurant.Email
                                                            </a>
                                                        </div>
                                                    }
                                                    @if (restaurant.ServeCustomersInPlace)
                                                    {
                                                        <div class="mt-2">
                                                            <span class="badge bg-success">
                                                                <i class="bi bi-check-circle me-1"></i>
                                                                Dine-in Available
                                                            </span>
                                                        </div>
                                                    }
                                                </address>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Customer Information -->
                                    <div class="col-lg-4 mb-3">
                                        <div class="card bg-secondary bg-opacity-10 border border-warning h-100">
                                            <div class="card-body">
                                                <h6 class="fw-bold mb-3">
                                                    <i class="bi bi-person-circle me-2 text-warning"></i>
                                                    Customer Contact
                                                </h6>
                                                <div class="d-flex align-items-start">
                                                    @if (order.User.Image != null)
                                                    {
                                                        <img class="img-thumbnail rounded-circle me-3" src="@order.User.Image" 
                                                             style="width: 60px; height: 60px; object-fit: cover;" alt="Customer" />
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-warning bg-opacity-25 rounded-circle me-3 d-flex align-items-center justify-content-center" 
                                                             style="width: 60px; height: 60px;">
                                                            <i class="bi bi-person-fill text-warning fs-4"></i>
                                                        </div>
                                                    }
                                                    <div class="flex-grow-1">
                                                        <p class="mb-2 fw-semibold">@order.User.Name</p>
                                                        <div class="mb-2">
                                                            <i class="bi bi-envelope me-2 text-warning"></i>
                                                            <a href="mailto:@order.User.Email" class="text-decoration-none">
                                                                @order.User.Email
                                                            </a>
                                                        </div>
                                                        <div class="mb-2">
                                                            <i class="bi bi-telephone me-2 text-warning"></i>
                                                            <a href="tel:@order.UserAddress.PhoneNumber" class="text-decoration-none">
                                                                @order.UserAddress.PhoneNumber
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Delivery Information -->
                                    <div class="col-lg-4 mb-3">
                                        <div class="card bg-warning bg-opacity-10 border-warning border-opacity-50 h-100">
                                            <div class="card-body">
                                                <h6 class="text-warning fw-bold mb-3">
                                                    <i class="bi bi-geo-alt-fill me-2"></i>
                                                    Delivery Destination
                                                </h6>
                                                <address class="mb-3">
                                                    <i class="bi bi-house-door-fill text-warning me-2"></i>
                                                    @order.UserAddress.Address<br>
                                                    @order.UserAddress.City, @order.UserAddress.State<br>
                                                    @order.UserAddress.Country @order.UserAddress.PostalCode
                                                </address>
                                                
                                                <div class="border-top pt-3">
                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                        <span class="text-muted">
                                                            <i class="bi bi-cash me-1"></i>
                                                            Total Price:
                                                        </span>
                                                        <span class="fw-bold fs-5 text-warning">@order.TotalPrice lv.</span>
                                                    </div>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="text-muted">
                                                            <i class="bi bi-clock me-1"></i>
                                                            Ordered:
                                                        </span>
                                                        <span class="fw-semibold">@order.OrderedAt.ToString("MMM dd, yyyy HH:mm")</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Order Notes -->
                                @if (!string.IsNullOrEmpty(order.Notes))
                                {
                                    <div class="row mb-3">
                                        <div class="col-12">
                                            <div class="card border border-warning bg-warning bg-opacity-5">
                                                <div class="card-body py-3">
                                                    <h6 class="text-warning mb-2">
                                                        <i class="bi bi-sticky me-2"></i>
                                                        Order Notes
                                                    </h6>
                                                    <p class="mb-0 fst-italic">@order.Notes</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!-- Action Buttons -->
                                <div class="row">
                                    <div class="col-12">
                                        <div class="card bg-dark border-warning">
                                            <div class="card-body text-center py-4">
                                                <div class="mb-3">
                                                    <p id="error,@order.Id" class="text-danger mb-0"></p>
                                                </div>
                                                
                                                @if (order.CurrentStatus.Equals(OrderStatusEnum.Delivering))
                                                {
                                                    <div class="d-flex flex-column flex-md-row justify-content-center align-items-center gap-3">
                                                        <button class="btn btn-success btn-lg px-5 py-3 shadow"
                                                                onclick="delivered()"
                                                                type="button">
                                                            <i class="bi bi-check-circle-fill me-2"></i>
                                                            Mark as Delivered
                                                        </button>

                                                        <button class="btn btn-danger btn-lg px-5 py-3 shadow"
                                                                onclick="canceled()"
                                                                type="button">
                                                            <i class="bi bi-x-circle-fill me-2"></i>
                                                            Cancel Delivery
                                                        </button>
                                                    </div>
                                                    
                                                    <div class="mt-3">
                                                        <small class="text-light">
                                                            <i class="bi bi-info-circle me-1"></i>
                                                            Complete the delivery or cancel if there are issues
                                                        </small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="text-center">
                                                        <div class="spinner-border text-warning mb-3" role="status">
                                                            <span class="visually-hidden">Loading...</span>
                                                        </div>
                                                        <h6 class="text-light">Order Status Changed</h6>
                                                        <p class="text-muted mb-0">This order is no longer in delivery status</p>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- No Active Deliveries -->
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-truck display-1 text-warning opacity-50"></i>
                </div>
                <h4 class="text-warning mb-3">No Active Deliveries</h4>
                <p class="text-muted mb-4">You don't have any orders currently under delivery</p>
                <a href="/staff/delivery" class="btn btn-warning">
                    <i class="bi bi-search me-2"></i>
                    Browse Available Orders
                </a>
            </div>
        }

        @await Html.PartialAsync("_RestaurantFooter")
    </div>

    @await Html.PartialAsync("_Footer")
</body>

@functions{
    private string GetStatusBadgeColor(OrderStatusEnum status)
    {
        return status switch
        {
            OrderStatusEnum.Pending => "warning",
            OrderStatusEnum.Preparing => "info",
            OrderStatusEnum.Ready => "success",
            OrderStatusEnum.Served => "success",
            OrderStatusEnum.Delivering => "primary",
            OrderStatusEnum.Delivered => "success",
            _ => "secondary"
        };
    }

    private string GetStatusBadgeColorDish(DishStatusEnum status)
    {
        return status switch
        {
            DishStatusEnum.Pending => "warning",
            DishStatusEnum.Preparing => "info",
            DishStatusEnum.Ready => "success",
            _ => "secondary"
        };
    }

    private string GetStatusIcon(OrderStatusEnum status)
    {
        return status switch
        {
            OrderStatusEnum.Pending => "hourglass-split",
            OrderStatusEnum.Preparing => "fire",
            OrderStatusEnum.Ready => "check2",
            OrderStatusEnum.Served => "check2-all",
            OrderStatusEnum.Delivering => "truck",
            OrderStatusEnum.Delivered => "check2-all",
            _ => "question-circle"
        };
    }

    private string GetStatusIconDish(DishStatusEnum status)
    {
        return status switch
        {
            DishStatusEnum.Pending => "hourglass-split",
            DishStatusEnum.Preparing => "fire",
            DishStatusEnum.Ready => "check2",
            _ => "question-circle"
        };
    }

    private string GetDishIcon(DishTypeEnum dishType)
    {
        return dishType switch
        {
            DishTypeEnum.salads => "leaf-fill",
            DishTypeEnum.soups => "cup-hot",
            DishTypeEnum.appetizers => "flower1",
            DishTypeEnum.dishes => "flower1",
            DishTypeEnum.desserts => "cake2",
            DishTypeEnum.drinks => "cup-straw",
            _ => "dish"
        };
    }
}