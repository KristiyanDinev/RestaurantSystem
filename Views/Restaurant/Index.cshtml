@using RestaurantSystem.Models.DatabaseModels;
@using RestaurantSystem.Models.View.Messages
@model List<RestaurantModel>
@{
    ViewData["Title"] = "Restaurants";
}
<head>
    @await Html.PartialAsync("_Header")
    <script src="~/assets/restaurant/restaurant.js"></script>
</head>
<body>
    <div class="container-fluid py-5">
        <!-- Page Header -->
        <div class="row mb-5">
            <div class="p-2">
                @await Html.PartialAsync("_RestaurantLogoText")
            </div>
            <div class="col-12 text-center">
                <h1 class="display-4 text-warning mb-2">
                    <i class="bi bi-shop me-3"></i>Choose Your Savans Location
                </h1>
                <p class="lead text-muted">Select from our premium restaurant locations</p>
                <div class="mx-auto" style="width: 100px; height: 2px; background: linear-gradient(90deg, #ffc107, #212529);"></div>
            </div>
            <div class="p-2">
                @await Html.PartialAsync("_ChangeTheme")
            </div>
        </div>

        @if (Model.Count == 0)
        {
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                        <div>
                            <h5 class="alert-heading mb-1">No Restaurants Available</h5>
                            <p class="mb-0">No restaurants match your area. Consider changing or adding new addresses to your profile.</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            @await Html.PartialAsync("_ErrorMessage", new MessageViewModel
            {
                Key = "ReservationInvalidRestaurant",
                Message = "Please select a restaurant, that serves customers on-site."
            })

        <div class="row g-4">
            @foreach (RestaurantModel restaurant in Model)
                {
                    <div class="col-lg-6 col-xl-4">
                        <div class="card border-warning h-100"
                             style="cursor: pointer; transition: all 0.3s ease;"
                             onclick="choose('@restaurant.Id')"
                             onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='0 10px 25px rgba(255,193,7,0.3)';"
                             onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none';"
                             data-bs-theme-target="card">
                            
                            <!-- Restaurant Header -->
                            <div class="card-header bg-warning text-dark">
                                <h5 class="card-title mb-0 fw-bold">
                                    <i class="bi bi-geo-alt-fill me-2"></i>
                                    Savans Restaurant
                                </h5>
                            </div>

                            <div class="card-body">
                                <!-- Address Section -->
                                <div class="mb-3">
                                    <h6 class="text-warning mb-2">
                                        <i class="bi bi-pin-map me-2"></i>Location
                                    </h6>
                                    <p class="mb-0">
                                        @string.Join(", ", restaurant.Address, restaurant.City, restaurant.State, restaurant.Country)
                                    </p>
                                </div>

                                <!-- Services Section -->
                                <div class="mb-3">
                                    <h6 class="text-warning mb-2">
                                        <i class="bi bi-list-check me-2"></i>Services
                                    </h6>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            @if (restaurant.DoDelivery)
                                            {
                                                <span class="badge bg-success d-flex align-items-center">
                                                    <i class="bi bi-truck me-1"></i>
                                                    Delivery
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary d-flex align-items-center">
                                                    <i class="bi bi-truck me-1"></i>
                                                    No Delivery
                                                </span>
                                            }
                                        </div>
                                        <div class="col-6">
                                            @if (restaurant.ServeCustomersInPlace)
                                            {
                                                <span class="badge bg-success d-flex align-items-center">
                                                    <i class="bi bi-person-check me-1"></i>
                                                    Dine-in
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary d-flex align-items-center">
                                                    <i class="bi bi-person-x me-1"></i>
                                                    No Dine-in
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Reservations Section -->
                                <div>
                                    <h6 class="text-warning mb-2">
                                        <i class="bi bi-calendar-check me-2"></i>Reservation Limits
                                    </h6>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <div class="bg-body-secondary p-2 rounded">
                                                <div class="text-center">
                                                    <i class="bi bi-people-fill text-warning"></i>
                                                    <small class="d-block text-muted">Adults</small>
                                                    <strong>@restaurant.ReservationMinAdults - @restaurant.ReservationMaxAdults</strong>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="bg-body-secondary p-2 rounded">
                                                <div class="text-center">
                                                    <i class="bi bi-person-hearts text-warning"></i>
                                                    <small class="d-block text-muted">Children</small>
                                                    <strong>@restaurant.ReservationMinChildren - @restaurant.ReservationMaxChildren</strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Card Footer -->
                            <div class="card-footer bg-transparent border-warning">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">Click to select</small>
                                    <i class="bi bi-arrow-right-circle text-warning"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        @await Html.PartialAsync("_RestaurantFooter")
    </div>

    @await Html.PartialAsync("_Footer")
</body>