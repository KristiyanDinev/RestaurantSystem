@using RestaurantSystem.Enums
@model RestaurantSystem.Models.DatabaseModels.UserModel;


<nav class="navbar navbar-expand-lg border-bottom border-warning shadow-lg" id="nav">
    <div class="container-fluid d-flex flex-row align-items-center justify-content-between px-4 py-3">
        <div class="flex-column flex-sm-row d-flex align-items-center flex-grow-1" style="margin-bottom:1em;">
            <div class="me-4">
                @await Html.PartialAsync("_RestaurantLogoText")
            </div>
            <div class="d-flex align-items-center flex-wrap gap-2 ms-3">
                @if (Model.Roles.Any(r => RoleEnum.manager.ToString().Equals(r.RoleName, StringComparison.OrdinalIgnoreCase)))
                {
                    <a href="/staff/manager/employees" class="btn btn-primary">Manager</a>
                    <a href="/staff/dishes" class="btn btn-primary">Dishes</a>
                    <a href="/staff/orders" class="btn btn-primary">Orders</a>
                    <a href="/staff/reservations" class="btn btn-primary">Reservations</a>
                    <a href="/staff/delivery/address" class="btn btn-primary">Delivery</a>
                }
                else
                {
                    @if (Model.Roles.Any(r => RoleEnum.cook.ToString().Equals(r.RoleName, StringComparison.OrdinalIgnoreCase)))
                    {
                        <a href="/staff/dishes" class="btn btn-primary">Dishes</a>
                    }
                    @if (Model.Roles.Any(r => RoleEnum.waitress.ToString().Equals(r.RoleName, StringComparison.OrdinalIgnoreCase)))
                    {
                        <a href="/staff/orders" class="btn btn-primary">Orders</a>
                        <a href="/staff/reservations" class="btn btn-primary">Reservations</a>
                    }
                    @if (Model.Roles.Any(r => RoleEnum.delivery.ToString().Equals(r.RoleName, StringComparison.OrdinalIgnoreCase)))
                    {
                        <a href="/staff/delivery" class="btn btn-primary">Delivery</a>
                    }
                }
            </div>
        </div>
        <div class="flex-column flex-sm-row d-flex align-items-center justify-content-end flex-grow-1">
            <div class="d-flex flex-column align-items-center justify-content-center me-3">
                @if (Model.Image != null)
                {
                    <img class="rounded-circle border border-warning border-2 object-fit-cover" width="100" height="100"  src="@Model.Image">
                }
                <p class="mb-0">@Model.Name</p>
            </div>

            <div class="p-2">
                @await Html.PartialAsync("_ChangeTheme")
            </div>
            <a href="/dishes" class="btn btn-secondary m-2">Go back to Restaurant Menu</a>
        </div>
    </div>
</nav>
