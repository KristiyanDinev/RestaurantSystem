@model RestaurantSystem.Models.DatabaseModels.DishModel;

@if (Model.Image != null)
{
    <img src="@Model.Image" class="img-thumbnail rounded" alt="No image for now">
}

<h4 class="card-title">@Model.Name</h4>
<p class="card-text">Grams: /@Model.Grams/</p>
<p class="card-text">Ingredients: @Model.Ingredients</p>
<p class="card-text">Avеrage Time To Cook: @Model.AverageTimeToCook minute/s</p>
<p class="card-text">Price: @Model.Price lv.</p>
