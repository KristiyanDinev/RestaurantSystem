@using RestaurantSystem.Enums;
@using RestaurantSystem.Models.DatabaseModels;
@using RestaurantSystem.Models.View.Staff.Waitress
@using RestaurantSystem.Models.View.Messages
@model ReservationViewModel;
@{
    ViewData["Title"] = "Staff Reservations - Savans Restaurant";
}

<head>
    @await Html.PartialAsync("_Header")
    <script src='~/assets/staff/waitress/reservations_staff.js'></script>
    <script src='~/assets/cart/cart.js'></script>
</head>

<body>
    @await Html.PartialAsync("_StaffNavBar", Model.Staff)
    @await Html.PartialAsync("_RestaurantBar", Model.Staff.Restaurant)

    <!-- Hero Section -->
    <div class="bg-warning text-dark py-4 mb-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-calendar-check me-2"></i>
                        All Reservations at Savans
                    </h1>
                    <p class="lead mb-0">Manage all reservations at Savans Restaurant</p>
                </div>
            </div>
        </div>
    </div>

     <div class="container">

        <!-- Paging Component -->
        <div class="mb-4">
            @await Html.PartialAsync("_Paging", Model.Page)
        </div>

        @await Html.PartialAsync("_SuccessMessage", new MessageViewModel
        {
            Key = "PriceAlreadySet",
            Message = "Total Price is already set!"
        })

        @await Html.PartialAsync("_ErrorMessage", new MessageViewModel
        {
            Key = "PriceSetError",
            Message = "Couldn't set new price. Please try again."
        })

        @await Html.PartialAsync("_SuccessMessage", new MessageViewModel
        {
            Key = "PriceSetSuccessfully",
            Message = "Total Price has been set successfully!"
        })

        <!-- Empty State -->
        @if (!Model.Reservations.Any())
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-calendar-x display-1 text-warning"></i>
                </div>
                <h3 class="fw-bold mb-3 text-warning">No Reservations Yet</h3>
            </div>
        }

        <!-- Reservations Grid -->
        <div id="reservations" class="row">
            @foreach (ReservationModel reservation in Model.Reservations)
            {
                <div class="col-lg-6 col-xl-4 mb-4 page-row">
                    <div class="card h-100 shadow-sm border border-warning position-relative"
                         style="transition: transform 0.3s ease, box-shadow 0.3s ease;"
                         onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 8px 25px rgba(0,0,0,0.15)';"
                         onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='';">
                        <!-- Card Header with Status -->
                        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 fw-bold">
                                <i class="bi bi-calendar-event me-2"></i>
                                Reservation
                            </h5>
                            <span class="badge @(reservation.CurrentStatus == ReservationStatusEnum.Cancelled ? "bg-danger" :
                                                 reservation.CurrentStatus == ReservationStatusEnum.Accepted ? "bg-success" : "bg-secondary")">
                            @reservation.CurrentStatus
                        </span>
                    </div>

                        <div class="card-body">
                            <!-- Reservation Details -->
                            <div class="row mb-3">
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-clock text-warning me-2"></i>
                                        <div>
                                            <small class="text-muted">Dining Time</small>
                                            <div class="fw-bold">@reservation.At_Date.ToLocalTime().ToString("MMM dd, yyyy")</div>
                                            <div class="text-warning">@reservation.At_Date.ToLocalTime().ToString("h:mm tt")</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-bookmark text-warning me-2"></i>
                                        <div>
                                            <small class="text-muted">Reserved On</small>
                                            <div class="fw-bold">@reservation.Created_At.ToLocalTime().ToString("MMM dd, yyyy")</div>
                                            <div class="text-muted">@reservation.Created_At.ToLocalTime().ToString("h:mm tt")</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Guest Information -->
                            <div class="border-top border-secondary pt-3 mb-3">
                                <h6 class="text-warning mb-2">
                                    <i class="bi bi-people me-2"></i>
                                    Attending Details
                                </h6>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person text-muted me-2"></i>
                                            <span>@reservation.Amount_Of_Adults Adults</span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person-heart text-muted me-2"></i>
                                            <span>@reservation.Amount_Of_Children Children</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Contact Information -->
                            <div class="border-top border-secondary pt-3 mb-3">
                                <h6 class="text-warning mb-2">
                                    <i class="bi bi-person-circle me-2"></i>
                                    Contact Information
                                </h6>
                                <div class="row">
                                    @if (reservation.User.Image != null)
                                    {
                                        <div class="col-12 mb-2">
                                            <div class="text-start mt-2">
                                                <img class="rounded-circle img-thumbnail object-fit-cover" src="@reservation.User.Image" width="100" height="100" />
                                            </div>
                                        </div>
                                    }
                                    <div class="col-12 mb-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person text-muted me-2"></i>
                                            <span>Name: @reservation.User.Name</span>
                                        </div>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-envelope text-muted me-2"></i>
                                            <span class="text-break">Email: @reservation.User.Email</span>
                                        </div>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-telephone text-muted me-2"></i>
                                            <span>Phone: @reservation.PhoneNumber</span>
                                        </div>
                                    </div>
                                </div>
                            
                            </div>

                            <!-- Notes Section -->
                            @if (!string.IsNullOrEmpty(reservation.Notes))
                            {
                                <div class="border-top border-secondary pt-3 mb-3">
                                    <h6 class="text-warning mb-2">
                                        <i class="bi bi-sticky me-2"></i>
                                        Special Notes
                                    </h6>
                                    <p class="text-muted mb-0 fst-italic">@reservation.Notes</p>
                                </div>
                            }
                        </div>

                        <!-- Card Footer -->
                        <div class="card-footer border-top border-secondary">
                            <div class="d-flex justify-content-evenly align-items-center">
                                <div>
                                    <div class="col-md-6 d-flex">
                                        <div class="d-flex align-items-center">
                                            <span class="text-muted text-nowrap me-1">Total Price: </span>
                                            <span class="fw-bold text-warning fs-5 text-nowrap ms-1"> @reservation.TotalPrice lv.</span>
                                        </div>
                                    </div>
                                    <div id="new_price_input" style="display:none;" class="mt-2">
                                                <input type="number" class="form-control mt-2" 
                                                    id="set_total_price" value="@reservation.TotalPrice" 
                                                    placeholder="Set New Price">
                                            </div>
                                </div>
                                @if (!reservation.CurrentStatus.Equals(ReservationStatusEnum.Cancelled))
                                        {
                                            <button type="button" class="btn btn-outline-secondary btn-sm ms-3"
                                                    onclick="togglePriceInput()">
                                                <i class="bi bi-pencil-square"></i>
                                                <small>Set Price</small>
                                            </button>
                                        }
                            </div>
                        </div>
                        <!-- Action Buttons -->
                        <div>
                            <div class="card-footer border-warning">
                                @{
                                    string pending = ReservationStatusEnum.Pending.ToString();
                                    string accepted = ReservationStatusEnum.Accepted.ToString();
                                    string cancelled = ReservationStatusEnum.Cancelled.ToString();
                                    string currentStatus = reservation.CurrentStatus.ToString();

                                    if (currentStatus.Equals(pending, StringComparison.OrdinalIgnoreCase))
                                    {
                                        <div class="d-grid gap-2">
                                            <button type="button" class="btn btn-success btn-lg"
                                                    onclick="changeStatus('@reservation.Id', '@accepted')">
                                                <i class="bi bi-check-circle me-2"></i>Accept Reservation
                                            </button>
                                            <button type="button" class="btn btn-outline-danger btn-sm"
                                                    onclick="changeStatus('@reservation.Id', '@cancelled')">
                                                <i class="bi bi-x-circle me-2"></i>Cancel
                                            </button>
                                        </div>
                                    } 
                                    else if (currentStatus.Equals(accepted, StringComparison.OrdinalIgnoreCase))
                                    {
                                        <div class="d-grid gap-2">
                                            <button type="button" class="btn btn-outline-warning btn-lg"
                                                    onclick="changeStatus('@reservation.Id', '@pending')">
                                                <i class="bi bi-arrow-clockwise me-2"></i>Mark as Pending
                                            </button>
                                            <button type="button" class="btn btn-outline-danger btn-sm"
                                                    onclick="changeStatus('@reservation.Id', '@cancelled')">
                                                <i class="bi bi-x-circle me-2"></i>Cancel
                                            </button>
                                        </div>
                                    } 
                                    else if (currentStatus.Equals(cancelled, StringComparison.OrdinalIgnoreCase))
                                    {
                                        <div class="d-grid">
                                            <button type="button" class="btn btn-outline-danger btn-sm"
                                                    onclick="deleteReservation('@reservation.Id')">
                                                <i class="bi bi-trash me-2"></i>Delete Reservation
                                            </button>
                                        </div>
                                    }


                                    @if (!reservation.CurrentStatus.Equals(ReservationStatusEnum.Cancelled))
                                            {
                                                <script>
                                                    set_total_price = document.getElementById("set_total_price");
                                                    set_total_price.onchange = function() {
                                                        if (set_total_price.value != "@reservation.TotalPrice") {
                                                            document.getElementById("submit_price").style.display = "block";
                                                            
                                                        } else {
                                                            document.getElementById("submit_price").style.display = "none";
                                                        }
                                                    }
                                                </script>
                                                <button id="submit_price" 
                                                    type="button" class="btn btn-primary mt-2" style="display:none;"
                                                        onclick="submitPrice('@reservation.Id')">
                                                    <i class="bi bi-bookmark-check-fill me-1"></i>Submit New Price
                                                </button>
                                            }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        @await Html.PartialAsync("_RestaurantFooter")
    </div>
    @await Html.PartialAsync("_Footer")
</body>
