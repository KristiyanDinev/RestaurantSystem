@model RestaurantSystem.Models.View.Dish.DishViewModel;

@{
    ViewData["Title"] = "Dish";
    Model.Dish.Image ??= "";
}


<head>
    <link rel='stylesheet' type='text/css' media='screen' href='~/assets/index.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='~/assets/single_dish/single_dish.css'>

    @await Html.PartialAsync("_Imports")
    <script src='~/assets/dishes/dish.js'></script>
</head>


<body>

    @await Html.PartialAsync("_NavBar", Model.User)
    @await Html.PartialAsync("_RestaurantBar", Model.Restaurant)

    <div class="menu">
        <p class="name">@Model.Dish.Name</p>

        <p class="grams">grams /@Model.Dish.Grams/</p>

        <p class="ingr">Ingredients: @Model.Dish.Ingredients</p>

        <image src="@Model.Dish.Image" class="image" alt="No image for now"></image>

        <p class="avg_time_to_took">Avrage time to cook: @Model.Dish.AvrageTimeToCook minute/s</p>

        <p class="price">@Model.Dish.Price lv.</p>

        <div id="orderbttn">
            <button class="order" onclick="addDishToCart('@Model.Dish.Id', '@Model.Dish.Name', false)">Add to order</button>
        </div>
    </div>

</body>