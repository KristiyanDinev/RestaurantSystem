@using RestaurantSystem.Models.DatabaseModels;
@using RestaurantSystem.Models.View.Messages;
@model RestaurantSystem.Models.View.Address.AddressesViewModel;
@{
    ViewData["Title"] = "Addresses - Savans Restaurant";
}

<head>
    @await Html.PartialAsync("_Header")
</head>

<body>
    @await Html.PartialAsync("_NavBar", Model.User)

    <!-- Hero Section -->
    <div class="bg-warning text-dark py-4 mb-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-6 fw-bold mb-3">
                        <i class="bi bi-geo-alt-fill me-4"></i> My Delivery Addresses
                    </h1>
                    <p class="mb-0 fw-medium">Manage your delivery locations for Savans Restaurant</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a class="btn btn-dark btn-lg shadow" href="/address/add">
                        <i class="bi bi-plus-circle me-2"></i>
                        Add New Address
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Success Message -->
        @await Html.PartialAsync("_SuccessMessage", new MessageViewModel
        {
            Key = "UpdateSuccess",
            Message = "Address updated successfully!"
        })

        @await Html.PartialAsync("_ErrorMessage", new MessageViewModel
        {
            Key = "UpdateError",
            Message = "Couldn't update address. Please try again."
         })

        @await Html.PartialAsync("_SuccessMessage", new MessageViewModel
        {
            Key = "DeleteSuccess",
            Message = "Address deleted successfully!"
        })

        @await Html.PartialAsync("_ErrorMessage", new MessageViewModel
        {
            Key = "DeleteError",
            Message = "Couldn't delete address. Please try again."
        })

        @await Html.PartialAsync("_SuccessMessage", new MessageViewModel
        {
            Key = "AddSuccess",
            Message = "Address added successfully!"
        })

        @await Html.PartialAsync("_ErrorMessage", new MessageViewModel
        {
            Key = "AddError",
            Message = "Couldn't add your address. Please try again."
        })

        @await Html.PartialAsync("_SuccessMessage", new MessageViewModel
        {
            Key = "LoginSuccess",
            Message = "Login successfully!"
        })

        @await Html.PartialAsync("_SuccessMessage", new MessageViewModel
        {
            Key = "RegisterSuccess",
            Message = "Registered successfully!"
        })

        <!-- Paging Component -->
        <div class="mb-4">
            @await Html.PartialAsync("_Paging", Model.Page)
        </div>


        <!-- Empty State -->
        @if (!Model.Addresses.Any() && Model.Page == 1)
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-geo-alt text-warning" style="font-size: 4rem; opacity: 1;"></i>
                </div>
                <h4 class="text-muted mb-3">No addresses saved yet</h4>
                <p class="text-muted mb-4">Add your first delivery address to start ordering from Savans!</p>
                <a href="/address/add" class="btn btn-warning btn-lg">
                    <i class="bi bi-plus-lg me-2"></i>
                    Add Your First Address
                </a>
            </div>
        }

        <!-- Addresses Grid -->
        <div class="row g-4">
            @foreach (AddressModel address in Model.Addresses)
            {
                <div class="page-row col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-warning position-relative overflow-hidden"
                         style="transition: transform 0.3s ease, box-shadow 0.3s ease;"
                         onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 8px 25px rgba(0,0,0,0.15)';"
                         onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='';">
                        <!-- Restaurant Theme Accent -->
                        <div class="position-absolute top-0 start-0 w-100 bg-warning" style="height: 4px;"></div>

                        <div class="card-body p-4 d-flex justify-content-between flex-column">
                            <!-- Header -->
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-warning bg-opacity-25 rounded-circle p-2 me-3">
                                    <i class="bi bi-geo-alt-fill text-warning"></i>
                                </div>
                                <h5 class="card-title mb-0 fw-bold">Delivery Location</h5>
                            </div>

                            <!-- Address Information -->
                            <div class="address-info mb-4">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted fw-semibold">
                                        <i class="bi bi-flag me-1 text-warning"></i>Country:
                                    </small>
                                    <span>@address.Country</span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted fw-semibold">
                                        <i class="bi bi-map me-1 text-warning"></i>State / Province / Region:
                                    </small>
                                    <span>@address.State</span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted fw-semibold">
                                        <i class="bi bi-building me-1 text-warning"></i>City:
                                    </small>
                                    <span>@address.City</span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted fw-semibold">
                                        <i class="bi bi-geo-alt me-1 text-warning"></i>Street Address:
                                    </small>
                                    <span>@address.Address</span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted fw-semibold">
                                        <i class="bi bi-mailbox me-1 text-warning"></i>Postal / Zip code:
                                    </small>
                                    <span>@address.PostalCode</span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted fw-semibold">
                                        <i class="bi bi-phone me-1 text-warning"></i>Phone:
                                    </small>
                                    <span>@address.PhoneNumber</span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted fw-semibold">
                                        <i class="bi bi-chat-left-text me-2 text-warning"></i>Notes:
                                    </small>
                                    <span>@address.Notes</span>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex gap-2 mt-auto">
                                <a href="/address/update/@address.Id" class="btn btn-outline-warning btn-sm flex-fill">
                                    <i class="bi bi-pencil me-1"></i>
                                    Edit
                                </a>
                                <button onclick="deleteAddress('@address.Id')" type="button" class="btn btn-outline-danger btn-sm flex-fill">
                                    <i class="bi bi-trash me-1"></i>
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @await Html.PartialAsync("_RestaurantFooter")
    </div>

    @await Html.PartialAsync("_Footer")
    <script src="~/assets/address/address.js"></script>
</body>