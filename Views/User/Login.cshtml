@{
    ViewData["Title"] = "Login";
}

<head>
    @await Html.PartialAsync("_Header")
    <style>
        html,
        body {
            height: 100%;
        }

        .form-signin {
            max-width: 330px;
            padding: 1rem;
        }

            .form-signin .form-floating:focus-within {
                z-index: 2;
            }

            .form-signin input[type="email"] {
                margin-bottom: -1px;
                border-bottom-right-radius: 0;
                border-bottom-left-radius: 0;
            }

            .form-signin input[type="password"] {
                margin-bottom: 10px;
                border-top-left-radius: 0;
                border-top-right-radius: 0;
            }

        .btn-theme-toggle {
            position: absolute;
            top: 1rem;
            right: 1rem;
            z-index: 1000;
        }

        .theme-icon {
            width: 1.25rem;
            height: 1.25rem;
        }

        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }


        .form-signin h1 {
            color: #d63384 !important;
            font-family: 'Georgia', serif;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

        .btn-warning {
            background: linear-gradient(45deg, #ffc107, #ff6b35);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-warning:hover {
                background: linear-gradient(45deg, #ff6b35, #ffc107);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.2);
                color: white !important;
            }


        .btn-outline-warning {
            border-color: #ffc107;
            color: #ffc107;
        }

            .btn-outline-warning:hover {
                background-color: #ffc107;
                border-color: #ffc107;
                color: white;
            }

        /* Dark mode styles */
        [data-bs-theme="dark"] .form-signin {
            color: var(--bs-body-color);
        }

        [data-bs-theme="dark"] .form-control:focus {
            border-color: var(--bs-primary);
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }


        [data-bs-theme="dark"] .btn-warning {
            background: linear-gradient(45deg, #e6ac00, #cc5a2b);
        }

            [data-bs-theme="dark"] .btn-warning:hover {
                background: linear-gradient(45deg, #cc5a2b, #e6ac00);
            }
    </style>
</head>


<body class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto">
        @await Html.PartialAsync("_ChangeTheme")
        <div class="container">
            <div class="text-center mb-4">
                @await Html.PartialAsync("_RestaurantLogo")
                <h1 class="h2 mb-2 fw-bold text-primary">Savanas</h1>
                <p class="text-muted mb-3">Welcome back! Please sign in to your account.</p>
            </div>

            <div class="form-floating">
                <input type="email" class="form-control" id="Email" placeholder="name@example.com" maxlength="50" required>
                <label for="Email">
                    <i class="bi bi-envelope-fill me-2"></i>Email address
                </label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="Password" placeholder="Password" required>
                <label for="Password">
                    <i class="bi bi-lock-fill me-2"></i>Password
                </label>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="RememberMe">
                <label class="form-check-label" for="RememberMe">
                    <i class="bi bi-clock-fill me-2"></i>Remember me
                </label>
            </div>

            <div class="mb-3">
                <div id="Stats" class="alert d-none" role="alert"></div>
            </div>

            <button class="btn btn-warning w-100 py-2 fw-semibold" type="button" onclick="submit()">
                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
            </button>

            <div class="text-center mt-4">
                <p class="text-muted">Don't have an account?</p>
                <a class="btn btn-outline-warning" href="/register">
                    <i class="bi bi-person-plus-fill me-2"></i>Sign Up
                </a>
            </div>

            <p class="mt-4 mb-3 text-body-secondary text-center">
                <i class="bi bi-c-circle me-1"></i>2023–2030 Savanas Restaurant
            </p>
        </div>
    </main>

    @await Html.PartialAsync("_Footer")
    <script src="~/assets/index.js"></script>
    <script src='~/assets/login/login.js'></script>
</body>