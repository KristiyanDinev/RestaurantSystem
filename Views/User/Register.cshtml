@{
    ViewData["Title"] = "Register";
}



<head>
    
    @await Html.PartialAsync("_Imports")

</head>

<body>

    <div class="container-fluid">
        <div class="register-container">
            <h1 class="form-title">Create Your Account</h1>

            <div novalidate>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="Username" class="form-label">Username <span class="required">*</span></label>
                        <input type="text" class="form-control" id="Username" maxlength="100" placeholder="Enter username" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="Email" class="form-label">Email <span class="required">*</span></label>
                        <input type="email" class="form-control" id="Email" maxlength="100" placeholder="Enter email" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password <span class="required">*</span></label>
                    <input type="password" class="form-control" id="Password" placeholder="Enter password" required>
                </div>

                <div class="mb-3">
                    <label for="Image" class="form-label">Profile Image</label>
                    <button class="btn btn-danger rounded m-2" onclick="removeImage()">Remove Image</button>
                    <input type="file" class="form-control" id="Image" accept="image/*">
                    <img id="preview" src="#" alt="Profile preview" class="mt-2 rounded img-thumbnail" />
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" id="RememberMe">
                    <label class="form-check-label" for="RememberMe">
                        Remember me
                    </label>
                </div>

                <div id="Stats" class="mb-3"></div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <button type="button" class="btn btn-primary btn-lg me-md-2" onclick="submit()">
                        Create Account
                    </button>
                    <button type="button" class="btn btn-secondary btn-lg" onclick="goToLogin()">
                        Go to Login
                    </button>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_BottomImports")
    <script src='~/assets/register/register.js'></script>
</body>