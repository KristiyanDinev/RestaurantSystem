@{
    ViewData["Title"] = "Register - Savans Restaurant";
}

<head>
    @await Html.PartialAsync("_Header")
</head>


@await Html.PartialAsync("_ChangeTheme")
<div class="d-flex py-4">
    <div class="form-signin w-100 m-auto">
        <div class="container align-items-center">
            <div class="text-center mb-4">
                @await Html.PartialAsync("_RestaurantLogo")
                <h1 class="h2 mb-2 fw-bold text-primary logo">Savanas</h1>
                <p class="text-muted mb-3">Sign Up and join our food-loving community!</p>
            </div>

            <div novalidate>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="Username" placeholder="Enter username" maxlength="100" value="@TempData["Name"]">
                    <label for="Username"><i class="bi bi-person-fill me-2"></i>Username <span class="text-danger">*</span></label>
                </div>

                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="Email" placeholder="Enter email" maxlength="100" value="@TempData["Email"]">
                    <label for="Email"><i class="bi bi-envelope-fill me-2"></i>Email <span class="text-danger">*</span></label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="Password" placeholder="Enter password" required>
                    <label for="Password"><i class="bi bi-lock-fill me-2"></i>Password <span class="text-danger">*</span></label>
                </div>

                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-image-fill me-2"></i>Profile Image</label>
                    <input type="file" class="form-control" id="Image" accept="image/*">
                    <button type="button" class="btn btn-outline-danger mt-2" onclick="removeImage()">
                        <i class="bi bi-x-circle me-1"></i>Remove Image
                    </button>
                    <img id="preview" src="#" alt="Profile Preview" class="preview-img mt-2 rounded img-thumbnail d-none" />
                </div>

                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" id="RememberMe">
                    <label class="form-check-label" for="RememberMe">
                        <i class="bi bi-clock-fill me-2"></i>Remember me
                    </label>
                </div>

                <div class="mb-3">
                    @await Html.PartialAsync("_ErrorMessage", new RestaurantSystem.Models.View.Messages.MessageViewModel
                    {
                        Key = "Error",
                        Message = "Invalid account details. Please try again."
                    })
                </div>

                <button type="button" class="btn btn-warning w-100 py-2 fw-semibold mb-3" onclick="submit()">
                    <i class="bi bi-person-plus-fill me-2"></i>Sign Up
                </button>

                <div class="text-center">
                    <p class="text-muted">Already have an account?</p>
                    <a class="btn btn-outline-warning" href="/login">
                        <i class="bi bi-box-arrow-in-left me-2"></i>Go to Login
                    </a>
                </div>

                <p class="mt-4 mb-3 text-body-secondary text-center">
                    <i class="bi bi-c-circle me-1"></i>2023-2030 Savanas Restaurant
                </p>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_Footer")
    <script src="~/assets/index.js"></script>
    <script src="~/assets/register/register.js"></script>
</div>
