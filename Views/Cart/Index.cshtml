@using RestaurantSystem.Models.DatabaseModels;
@model RestaurantSystem.Models.View.User.CartViewModel;
@{
    ViewData["Title"] = "Cart - Savans Restaurant";
}
<head>
    @await Html.PartialAsync("_Header")
    <script src='~/assets/dishes/dish.js'></script>
    <script src='~/assets/cart/cart.js'></script>
</head>
<body>
    @await Html.PartialAsync("_NavBar", Model.User)
    @await Html.PartialAsync("_RestaurantBar", Model.Restaurant)

    <div class="container my-5">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="text-center">
                    <h1 class="display-4 text-warning mb-2">
                        <i class="bi bi-cart3"></i> Your Cart
                    </h1>
                    <p class="lead text-muted">Review your delicious selections</p>
                </div>
                <div class="mx-auto" style="width: 300px; height: 2px; background: linear-gradient(90deg, #ffc107, #212529);"></div>
            </div>
        </div>

        <div class="row">
            <!-- Cart Items Section -->
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-basket3"></i> Selected Items
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @await Html.PartialAsync("_CartDishes", Model.Dishes)
                    </div>
                </div>
            </div>

            <!-- Order Summary & Details -->
            <div class="col-lg-4">
                <!-- Order Notes -->
                <div class="card shadow-sm border-warning mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-chat-left-text"></i> Order Notes (Optional)
                        </h5>
                    </div>
                    <div class="card-body">
                        <textarea id="notes"
                                  class="form-control border-warning"
                                  rows="4"
                                  maxlength="255"
                                  placeholder="Any special instructions for your order..."></textarea>
                        <div class="form-text text-muted">
                            <small>Maximum 255 characters</small>
                        </div>
                    </div>
                </div>

                <!-- Coupon Code -->
                <div class="card shadow-sm border-warning mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-tag"></i> Coupon Code
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="input-group">
                            @if (TempData.Peek("CuponInvalid") != null)
                            {
                                <input id="cupon_input"
                                   class="form-control is-invalid"
                                   maxlength="25"
                                   placeholder="Enter coupon code"
                                value="@TempData["CuponCode"]">
                                TempData.Remove("CuponInvalid");

                            } else if (TempData.Peek("CuponValid") != null)
                            {
                                <input id="cupon_input"
                                   class="form-control is-valid"
                                   maxlength="25"
                                   placeholder="Enter coupon code"
                                value="@TempData["CuponCode"]">
                                TempData.Remove("CuponValid");

                            } else
                            {
                                <input id="cupon_input"
                                       class="form-control"
                                       maxlength="25"
                                       placeholder="Enter coupon code">                            }
                            <button class="btn btn-warning text-white" 
                                    type="button" onclick="applyCuponCode()" id="apply">
                                <i class="bi bi-check2"></i> Apply
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Delivery Address -->
                <div class="card shadow-sm border-warning mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-geo-alt"></i> Delivery Address
                        </h5>
                    </div>
                    <div class="card-body">
                        <select id="address" class="form-select border-warning">
                            <option value="" disabled selected>Select delivery address...</option>
                            @foreach (var address in Model.Addresses)
                            {
                                <option value="@address.Id">
                                    @address.Country, @address.State, @address.City - @address.Address (Postal / Zip code: @address.PostalCode)
                                </option>
                            }
                        </select>
                        <div class="form-text text-muted">
                            <small>Choose where you'd like your order delivered</small>
                        </div>
                    </div>
                </div>

                <!-- Order Button -->
                <div class="d-grid">
                    <button type="button"
                            class="btn btn-warning btn-lg shadow-sm"
                            onclick="startOrder()">
                        <i class="bi bi-check-circle"></i> Place Order
                    </button>
                </div>
            </div>
        </div>
        @await Html.PartialAsync("_RestaurantFooter")
    </div>

    @await Html.PartialAsync("_Footer")
</body>